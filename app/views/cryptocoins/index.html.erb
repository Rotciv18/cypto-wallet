<p id="notice"><%= notice %></p>

<h1>Cryptocoins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>Acronym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptocoins.each do |cryptocoin| %>
      <tr>
        <td><%= image_tag cryptocoin.image_url, width: 25, height: 25 %></td>
        <td><%= cryptocoin.description %></td>
        <td><%= cryptocoin.acronym %></td>
        <td><%= link_to 'Show', cryptocoin %></td>
        <td><%= link_to 'Edit', edit_cryptocoin_path(cryptocoin) %></td>
        <td><%= link_to 'Destroy', cryptocoin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cryptocoin', new_cryptocoin_path %>
